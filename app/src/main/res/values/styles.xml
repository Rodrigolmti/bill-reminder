<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/gray700</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Headline.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Body.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Caption.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Little">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Little.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Tiny">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.Tiny.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Gotham.Regular.16" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
