<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@color/gray700</item>
    </style>

    <style name="TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Headline.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Body.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Caption.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Little">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Little.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Tiny">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.Tiny.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Gotham.Regular.16" parent="android:TextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    // Currency

    <style name="Currency">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/gray700</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Currency.Value">
        <item name="android:textColor">@color/color_selector_enabled_accent_accent_light</item>
        <item name="android:textColorHint">@color/color_selector_enabled_accent_accent_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    //Button

    <style name="Button" />

    <style name="Button.Primary">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:background">@drawable/selector_gradient_gray400</item>
        <item name="android:textColor">@color/color_selector_enabled_primary_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/button_radius</item>
    </style>

</resources>
