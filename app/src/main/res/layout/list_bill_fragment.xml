<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.bill_list.ListBillFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListBillFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="4"
        tools:listitem="@layout/item_bill"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabListBillFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/screen_margin_bottom"
        android:layout_marginEnd="@dimen/screen_margin_end"
        android:layout_gravity="end|bottom"
        android:src="@android:drawable/ic_menu_crop"
        app:layout_anchor="@id/rvListBillFragment"
        app:layout_anchorGravity="bottom|right|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>